# Frontend container: build and serve Vite app directly

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci --no-audit --no-fund

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Expose port
EXPOSE 4666

# Serve the built app
CMD ["npm", "run", "preview"]


